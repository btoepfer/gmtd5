
/ <!DOCTYPE html>
!!! 5
%html
  %head
    %meta{ 'name' => "viewport", 'content' => "width=device-width, initial-scale=1.0, maximum-scale=2.0"}
    %title
      = "GmTD V5.0"
      
    = favicon_link_tag 'favicon.ico'
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    
  %body{:id => "GmTD5"}
    %header(class = "site-header")
      .container         
        .logo
          = link_to image_tag("GmTD50.svg", title: "Back to Start", alt: "Start", :height=>"50px"), root_path, {:class=>"logo"}
        
        %nav(class="nav")
          // Ist der Benutzer angemeldet
          - if user_signed_in?
            = render 'layouts/navigation'
          - else
            = render 'devise/sessions/login_form'     
          
    .container   
      = yield
            
    = render 'layouts/footer'

    //Am Ende, damit diese Box den Inhalt ueberlagert.
    = render 'layouts/messages'
    
    
  %script
    $("#message").delay(3000).addClass("in").fadeOut(1000);
    $(function(){
    var nav = $('.nav .toggle-nav');
    nav.click(function(e){
    $('.nav .nav-mobile').addClass('style-mobile').slideToggle('slow');
    e.preventDefault();
    });
    });

  