= form_for(resource, as: resource_name, url: session_path(resource_name), 
           :html => {:class=>"navbar-form navbar-right", :role => "login"}) do |f|
  .form-group{:class => "input-group-sm"}
    = f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"
  .form-group{:class => "input-group-sm"}
    = f.password_field :password, autocomplete: "off", placeholder: t(:password), class: "form-control"
  %button{:id => "Login", :type => "submit", :class=>"btn btn-primary btn-sm"}
    %i{:class=>"fa fa-user"}
      = t(:log_in)