= form_for(:user, url: registration_path(:user)) do |f|
    
  .form-group
    = f.label :username, t(:username)
    .row
      %div{:class => "col-sm-12 col-xs-8"}
        = f.text_field :username,  placeholder: t(:username), class: "form-control"
        
  .form-group
    = f.label :email, t(:email)+" *"
    .row
      %div{:class => "col-sm-12 col-xs-8"}
        = f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"
        
  .form-group
    = f.label :password, t(:password)+" *"
    .row
      %div{:class => "col-sm-12 col-xs-8"}
        = f.password_field :password, autocomplete: "off", placeholder: t(:password), class: "form-control"
        
  .form-group
    = f.label :password_confirmation, t(:password_confirmation)+" *"
    .row
      %div{:class => "col-sm-12 col-xs-8"}
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: t(:password_confirmation), class: "form-control"
        
  .form-group
    = f.label :language, t(:preferred_language)
    .row
      %div{:class => "col-sm-12 col-xs-8"}
        = f.select :language, {englisch: "en", german: "de"}, {}, {class: "form-control"}
    .row
      %div{:class => "padded pull-right"}
        .small
          = t :fields_are_required
  .row
    %div{:class => "col-sm-12 col-xs-8"}    
      %button{:id => t(:sign_up), :type => "submit", :class=>"btn btn-primary"}
        %i{:class=>"fa fa-user-plus"}
          = t(:sign_up)
      

