= form_for(:user, url: session_path(:user), 
           :html => {:class=>"navbar-form navbar-right", :role => "login", :method => :post}) do |f|
  .row
    = f.label :email, t(:email)+" *"
  .row
    .form-group{:class => "input-group-sm"}
      = f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control input-sm", id: "login_user_email"
    
  .row
    = f.label :password, t(:password)+" *"
  .row
    .form-group{:class => "input-group-sm"}
      = f.password_field :password, autocomplete: "off", placeholder: t(:password), class: "form-control input-sm", id: "login_user_password"
      
    .row
      = f.check_box :remember_me
      = f.label :remember_me
      
  
    %button{:id => "login", :type => "submit", :class=>"btn btn-primary btn-sm"}
      %i{:class=>"fa fa-lock"}
        = t(:log_in)
       
    .row
      = link_to "Forgot your password?", new_password_path(:user)