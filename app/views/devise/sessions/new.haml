
= devise_error_messages!
.page-header
  %h2
    = t :log_in
    %br
    %small
      = t :please_log_in
      
%section{:class => "col-sm-6"}
  = form_for(:user, url: session_path(:user)) do |f|
    .form-group
      = f.label :email, t(:email)
      .row
        .col-xs-8
          = f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"
        
    .form-group
      = f.label :password, t(:password)
      .row
        .col-xs-8
          = f.password_field :password, autocomplete: "off", placeholder: t(:password), class: "form-control"
      
    - if devise_mapping.rememberable?
      .row
        .col-xs-8
          = f.check_box :remember_me
          = f.label :remember_me
      
    .row
      %div{:class=>"col-xs-8 padded"}      
        %button{:id => t(:sign_up), :type => "submit", :class=>"btn btn-primary"}
          %i{:class=>"fa fa-user"}
            = t(:log_in)
  
%section{:class => "col-sm-4 col-sm-offset-right-2"}
  = render "devise/shared/links"
