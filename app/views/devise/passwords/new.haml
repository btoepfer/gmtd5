
= devise_error_messages!
.page-header
  %h2
    = t "Forgot your password?"
    %br
    %small
      = t :please_enter_your_email
      
%section{:class => "col-sm-6"}
  = form_for(resource, url: password_path(resource), html: { method: :post }) do |f|
    .form-group
      = f.label :email, t(:email)
      .row
        .col-xs-8
          = f.email_field :email, autofocus: true, placeholder: t(:email), class: "form-control"
      
    .row
      %div{:class=>"col-xs-8 padded"}      
        %button{:id => t(:sign_up), :type => "submit", :class=>"btn btn-primary"}
          %i{:class=>"fa fa-envelope"}
            = t("Send me reset password instructions")
  
%section{:class => "col-sm-4 col-sm-offset-right-2"}
  = render "devise/shared/links"