.page-header
  %h2
    = t :create_note 
      
= form_for(:note, url: notes_path, html: { method: :post }) do |f|
  %section{:class => "col-sm-8 col-md-108"}
  
    .form-group
      = f.label :title, t(:title)
      = f.text_field :title, autocomplete: "off", autofocus: true, placeholder: t(:title), class: "form-control", size:80
      
    .form-group
      = f.label :content, t(:content)
      = f.hidden_field :content
      %trix-editor{:input=>"note_content", :placeholder=>t(:content), :class => "trix-content"}
        
    .row
      %div{:class=>"col-xs-8 padded"}      
        %button{:id => "update", :type => "submit", :class=>"btn btn-primary"}
          %i{:class=>"fa fa-file-text"}
            = t(:create)