- if @note then
  .page-header
    %h3
      = @note.title if @note
    
    .row
      %div{:class=>"col-xs-6 text-left"}
        = l @note.created_at 
      %div{:class=>"col-xs-6 text-right"}
        = link_to t(:create_note), new_note_path
        &nbsp;|&nbsp;
        = link_to t(:edit_note), edit_note_path(@note.id)
      
  %section
    .trix-content
      = find_and_preserve @note.content.html_safe
      
    %hr
    %div
      = render "tags"
    
- else
  %h1
    = t :note_not_found