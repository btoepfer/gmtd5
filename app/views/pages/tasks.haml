
%h3(class="border")
  %i{:class=>"fa fa-check-square-o"}
  =t(:tasks)
#tasks
  - ["Eingang", "To Do", "In Arbeit", "Erledigt"].each do |column_title|
    -if column_title == "Erledigt" 
      .content-25-last
        %h4
          = column_title
        .column
          -  4.times do |t|
            =render "task"
    - else
      .content-25
        %h4
          = column_title
        .column
          -  4.times do |t|
            =render "task"
            

